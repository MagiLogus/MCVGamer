@model Equipe

@{
    ViewData["Title"] = "Equipe";
}

<main>

        <section class="container-grid cadastro-equipes" >
            @if (ViewBag.UserName == null)
{
    <a asp-area="" asp-controller="Login" asp-action="Index">
        Login
    </a>
}
else
{
            <form class="frm-cad-equipe" method="post" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
                <div class="cadequipe-titulo">
                    <h1>Cadastro de Equipes</h1>
                    <hr>
                </div>

                <input class="campo-entrada" type="text" name="Nome" required placeholder="Digite o nome da sua equipe:">
                <label class="foto" for="foto-file">
                    @* Nenuma imagem selecionada... *@
                    <input  type="file" name="Imagem" id="foto-file">
                </label>
                
                <button type="submit">Cadastro</button>
                
                
                
                <!-- <select class="equipeid" id="equipeid">
                    <option value="">Selecione uma Equipe</option>
                    <option value="x">Equipe X</option>
                    <option value="y">Equipe Y</option>
                </select> -->
            </form>

         <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
               @foreach (Equipe equipe in ViewBag.Equipe)
               {
                <tr>
                    <td>@equipe.IdEquipe</td>
                    <td>@equipe.Nome</td>
                    <td>
                        <img src="/img/Equipes/@equipe.Imagem" alt="Imagem da equipe @equipe.Nome" width="50px">
                    </td>
                    <td>
                        <a asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe"><img class="yellow-trash" src="~/assets/trash.png" alt=""></a>
                        <a asp-area="" asp-controller="Equipe" asp-action="Editar" asp-route-id="@equipe.IdEquipe"><iconify-icon icon="mdi:clipboard-edit-outline" style="color: #f9aa01;" width="20" height="22"></iconify-icon></a>
                    </td>
                </tr>
                }

                </tbody>
            </table>
}
        </section>
    </main>

          










